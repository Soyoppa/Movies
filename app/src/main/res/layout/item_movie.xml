<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="255dp">

    <ImageView
        android:id="@+id/ivShowPoster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2E91E3C"
        android:scaleType="centerCrop"
        android:src="@drawable/gagamboy" />
    <View
        android:layout_width="match_parent"
        android:background="#33000000"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E8FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/movieRating"
        app:layout_constraintStart_toStartOf="@+id/movieRating"
        tools:text="Power Rangers" />

    <RatingBar
        android:id="@+id/movieRating"
        style="@android:style/Widget.Material.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="21dp"
        android:progressTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:rating="4" />


</androidx.constraintlayout.widget.ConstraintLayout>